<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">

    <link rel="stylesheet" href="/static/css/style.css">

    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
  </head>
  <body>
  <div class="flex flex-col h-screen justify-between">
    <header class="flex justify-between mb-10">
        <div class="flex items-center">
          <a href="{{ '/' | url }}" class="home"><img class="w-14 h-14 rounded-full mr-4" src="/static/img/peio.jpg" alt=""></a>
          <h1><a class="home" href="{{ '/' | url }}">{{ metadata.title }}</a></h1>
        </div>
        <ul class="nav">
          {%- for entry in collections.all | eleventyNavigation %}
            <li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}"><a href="{{ entry.url | url }}">{{ entry.title }}</a></li>
          {%- endfor %}
        </ul>
    </header>

    <div class="mb-auto">
      <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
        {{ content | safe }}
      </main>
    </div>

    <footer class="footer">
      <div class="footer-links">
        <div class="footer-item">
          <a href="{{ metadata.github.url | url }}">github</a>
        </div>
        <div class="footer-item">
          <a href="{{ metadata.linkedin.url | url }}">linkedin</a>
        </div>
        <div class="footer-item">
          <a href="{{ metadata.twitter.url | url }}">twitter</a>
        </div>
        <div class="footer-item">
          <a href="https://les61.fr">les61</a>
        </div>
        <div class="footer-item">
          <a href="{{ metadata.feed.path }}">rss</a>
        </div>
      </div>
    </footer>
  </body>
</html>
